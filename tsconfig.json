{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es6",
      "lib": [
        "es2015",
        "es2017",
        "dom"
      ],
      "removeComments": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": false,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./",
    },
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }